<div class="book">
	<%= content_tag :span, "#{@book.name} (#{@book.author})", class: "book-title" %>
	<%= link_to 'Edit', edit_book_path(@book) %>
</div>


<div id="notes">
  <%= render @book.notes %>
</div>

<div>
	<h3>Add a new note</h3>
</div>
<div class="form">
	<%= form_for([@book, @book.notes.new]) do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :note %><br>
		<%= f.text_area :note %>
	</div>
	<div class="btn">
		<%= f.submit "Add a new note" %>
	</div>
  <% end %>
</div>

<%= link_to 'Back', books_path %>
